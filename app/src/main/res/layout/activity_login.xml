<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:background="@color/color_main"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/back"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/num_la"
        android:layout_below="@id/topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_edit_view_bg"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="1dp">
        <EditText
            android:paddingLeft="5dp"
            android:layout_centerInParent="true"
            android:id="@+id/ev_num"
            android:hint="请输入手机号"
            android:layout_width="350dp"
            android:layout_height="42dp"
            android:textSize="15sp"
            android:drawableLeft="@mipmap/icon_phone"
            android:background="@null"
           />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/code_la"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/num_la"
        android:background="@drawable/corner_edit_view_bg"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/ev_code"
            android:layout_width="200dp"
            android:hint="请输入验证码"
            android:textSize="15sp"
            android:drawableLeft="@mipmap/icon_lock"
            android:layout_height="42dp"
            android:background="@null"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="115dp"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:text="获取验证码"
        android:textColor="@color/color_b7b6b2"
        android:gravity="center"
        android:padding="3dp"
        android:layout_marginTop="17dp"
        android:layout_below="@id/num_la"
        android:background="@drawable/corner_remote_view_g"
        android:layout_toRightOf="@id/code_la"
        />

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="5dp"
        android:text="登录"
        android:layout_marginTop="55dp"
        android:layout_below="@id/code_la"
        android:background="@drawable/corner_remote_view_btn"
        android:textColor="@color/color_fefefe"
        />

</RelativeLayout>
