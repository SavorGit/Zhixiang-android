<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:background="@color/color_main"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <com.savor.zhixiang.widget.cardrecyclerview.SpeedRecyclerView
        android:id="@+id/rlv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/page_num_layout"
        android:visibility="visible"
        android:layout_width="52sp"
        android:layout_height="42sp"
        android:layout_marginBottom="10sp">

        <ImageView
            android:id="@+id/view_line"
            android:layout_width="45dp"
            android:layout_height="28sp"
            android:layout_marginTop="10sp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/slash_view"/>

        <TextView
            android:id="@+id/bottomPageNumber"
            android:text="11"
            android:paddingRight="12dp"
            android:textSize="11sp"
            android:textColor="@color/color_9a9a9a"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/pageNumberTotal"
            android:text="16"
            android:textSize="15sp"
            android:textScaleX="1.2"
            android:textColor="@color/color_9a9a9a"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height= "wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="4sp"/>
    </RelativeLayout>

</LinearLayout>
