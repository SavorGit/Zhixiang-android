<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="85dp"
    android:gravity="center"
    android:text="请选择您所在的群体"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="@color/color_333333"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:text="我们为不同人群提供最合适的内容"
        android:textSize="16sp"
        android:textColor="@color/color_333333"
        />

    <RadioGroup
        android:id="@+id/rg_property"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rb_ten"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/property_selector"
            android:button="@null"
            android:gravity="center"
            android:text="资产10亿以上"
            android:textColor="@drawable/pro_text_color" />

        <RadioButton
            android:id="@+id/rb_one"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/property_selector"
            android:button="@null"
            android:gravity="center"
            android:text="资产1亿以上"
            android:textColor="@drawable/pro_text_color" />

        <RadioButton
            android:id="@+id/rb_one_mill"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/property_selector"
            android:button="@null"
            android:gravity="center"
            android:text="资产1千万以上"
            android:textColor="@drawable/pro_text_color" />

        <RadioButton
            android:id="@+id/rb_none"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:background="@drawable/property_selector"
            android:button="@null"
            android:gravity="center"
            android:text="暂不透露"
            android:textColor="@drawable/pro_text_color" />
    </RadioGroup>

    <LinearLayout
        android:gravity="center_horizontal|top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_enter"
            android:background="@drawable/enter_button_selector"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom"
            android:padding="10dp"
            android:text="进入" />
    </LinearLayout>

</LinearLayout>