<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f8f6f1"
    android:transitionName="sharedView"
    app:cardCornerRadius="8dp"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ico_test" />

        <TextView
            android:layout_below="@id/iv_banner"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="10dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:text="孙宏斌谈新乐视：商业模式稍微一改就赚钱"
            android:textColor="@color/color_main"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:maxLines="5"
            android:ellipsize="end"
            android:id="@+id/tv_source"
            android:layout_margin="11dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_999999"
            android:text="选自：MEEU有你"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_above="@id/tv_source"
            android:layout_below="@id/tv_title"
            android:lineSpacingExtra="9dp"
            android:textSize="15sp"
            android:textColor="@color/color_444444"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:id="@+id/tv_desc"
            android:text="精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。精彩纷呈的美食活动，不错。"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>